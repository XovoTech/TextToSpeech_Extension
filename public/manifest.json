{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "manifest_version": 3,
  "name": "Blakify",
  "description": "Allows you to insert values inside input element",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "tabs",
    "tts"
  ],
  "icons": {
    "48": "icons/icon.png"
  },
  "background": {
    "service_worker": "extension/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/jquery.min.js",
        "extension/content.js"
      ]
    }
  ]
}